{
  "manifest_version": 3,
  "name": "Render Mermaid OnTheFly",
  "version": "1.0.0",
  "description": "Render Mermaid diagrams from selected text with an interactive overlay",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "mermaid/*.js", "mermaid/*.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
